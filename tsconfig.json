{
    "compilerOptions": {
      "incremental": true,
      "target": "es2022",
      "module": "commonjs",
      "moduleResolution": "node",
      "strict": true,
      "resolveJsonModule": true,
      "isolatedModules": true,
      "rootDir": "./",
      "outDir": "./build",
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "composite": true
    },
    "include": [
      "./server.ts",
      "./package.json",
      "./src",
      "./src/**/*.json"
    ]
  }
  